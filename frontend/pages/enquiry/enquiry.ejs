  <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
  <script>
    $(document).ready(function () {
      // Initialize DataTables
      $('#contactTable').DataTable();

      // Fetch data from API and populate table
      $.ajax({
        url: 'http://localhost:4002/api/enquiries/all',
        type: 'GET',
        dataType: 'json',
        success: function (response) {
          if (response.success) {
            var tableBody = $('#contactsBody');
            var enquiries = response.data;

            // Clear existing table rows
            tableBody.empty();

            // Populate table with data
            enquiries.forEach(function (enquiry, index) {
              const createdAt = new Date(enquiry.createdAt);
              const formattedDate = `${createdAt.getDate()} ${getMonthName(
                createdAt.getMonth()
              )} ${createdAt.getFullYear()}`;
              var row = `<tr>
            <td>${index + 1}</td>
            <td>${formattedDate}</td>
            <td>${enquiry.parentName}</td>
            <td>${enquiry.studentName}</td>
            <td>${enquiry.parentEmail}</td>
            <td>${enquiry.mobileNumber}</td>
            <td>${enquiry.academicYear}</td>
            <td> ${enquiry.selectedClass}</td>
          </tr>`;
              tableBody.append(row);
            });
          } else {
            alert('Failed to load enquiries: ' + response.message);
          }
        },
        error: function (xhr, status, error) {
          console.error("Error fetching data:", error);
          alert('Failed to fetch data. Please try again later.');
        }
      });
    });

    function getMonthName(monthIndex) {
      const months = [
        "January",
        "February",
        "March",
        "April",
        "May",
        "June",
        "July",
        "August",
        "September",
        "October",
        "November",
        "December",
      ];
      return months[monthIndex];
    }
  </script>

