<!DOCTYPE html>
<html lang="en">
  <%- include('../../header', { title: 'Express with EJS' }) %>

  <body>
    <div class="container-scroller">
      <%- include('../../navbar') %>
      <div class="container-fluid page-body-wrapper">
        <%- include('../../sidebar') %>
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-12">
                        <div class="card">
                          <div class="card-header">
                            <div class="d-flex justify-content-between">
                              <h3 class="card-title">Facilities Details</h3>
                              <div class="d-flex justify-content-between">
                                <a
                                  href="/create-facilities"
                                  class="btn btn-primary btn-sm mr-2"
                                  >Add new</a
                                >
                              </div>
                            </div>
                          </div>
                          <div class="card-body">
                            <div
                              id="tb1_wrapper"
                              class="dataTables_wrapper dt-bootstrap4"
                            >
                              <div class="row">
                                <div class="col-sm-12">
                                  <table
                                    id="tb1"
                                    class="table table-bordered table-striped dataTable dtr-inline"
                                    role="grid"
                                    aria-describedby="tb1_info"
                                  >
                                    <thead>
                                      <tr role="row">
                                        <th
                                          class="sorting_asc"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="#: activate to sort column descending"
                                          aria-sort="ascending"
                                        >
                                          #
                                        </th>
                                        <th
                                          class="sorting"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="Create At: activate to sort column ascending"
                                        >
                                          Create At
                                        </th>
                                        <th
                                          class="sorting"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="Title: activate to sort column ascending"
                                        >
                                          Title
                                        </th>
                                        <th
                                          class="sorting"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="Description: activate to sort column ascending"
                                        >
                                          Description
                                        </th>
                                        <th
                                          class="sorting"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="Image: activate to sort column ascending"
                                        >
                                          Image
                                        </th>
                                        <th
                                          class="sorting"
                                          tabindex="0"
                                          aria-controls="tb1"
                                          rowspan="1"
                                          colspan="1"
                                          aria-label="Action: activate to sort column ascending"
                                        >
                                          Action
                                        </th>
                                      </tr>
                                    </thead>
                                    <tbody id="facilitiesBody"></tbody>
                                    <tfoot>
                                      <tr>
                                        <th rowspan="1" colspan="1">#</th>
                                        <th rowspan="1" colspan="1">
                                          Create At
                                        </th>
                                        <th rowspan="1" colspan="1">Title</th>
                                        <th rowspan="1" colspan="1">
                                          Description
                                        </th>
                                        <th rowspan="1" colspan="1">Image</th>
                                        <th rowspan="1" colspan="1">Action</th>
                                      </tr>
                                    </tfoot>
                                  </table>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%- include('../../footer') %>
        </div>
      </div>
    </div>
    <%- include('../../foot') %>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Facilities Listing -->
    <script>
      function deleteFacility(facilityId, row) {
        if (confirm("Are you sure you want to delete this facility?")) {
          $.ajax({
            url: `/api/facilities/delete/${facilityId}`,
            type: "DELETE",
            success: function (result) {
              alert("Facility deleted successfully.");
              // Remove the corresponding row from the table
              row.remove();
            },
            error: function (xhr, ajaxOptions, thrownError) {
              alert("Error deleting facility.");
            },
          });
        }
      }

      $(document).ready(function () {
        // Fetch data from the API
        $.get("/api/facilities/all", function (data) {
          if (data.data && data.data.length > 0) {
            data.data.forEach(function (facility, index) {
              const createdAt = new Date(facility.createdAt);
              const formattedDate = `${createdAt.getDate()} ${getMonthName(
                createdAt.getMonth()
              )} ${createdAt.getFullYear()}`;
              $("#facilitiesBody").append(`
                      <tr>
                          <td>${index + 1}</td>
                          <td>${formattedDate}</td>
                          <td>${facility.title}</td>
                          <td class="description" style="max-height: 100px; max-width: 200px; overflow: auto; word-wrap: break-word;">${
                            facility.description
                          }</td>
                          <td><img src="${
                            facility.image
                          }" alt="Facility Image" style="max-width: 100px; max-height: 100px;"></td>
                          <td>
                              <a href="#" onclick="deleteFacility('${
                                facility._id
                              }', $(this).closest('tr')); return false;"><i class="fa fa-trash"></i></a>
                          </td>
                      </tr>
                  `);
            });
            $("#tb1").DataTable();
          } else {
            console.log("No data found");
          }
        });
      });

      function getMonthName(monthIndex) {
        const months = [
          "January",
          "February",
          "March",
          "April",
          "May",
          "June",
          "July",
          "August",
          "September",
          "October",
          "November",
          "December",
        ];
        return months[monthIndex];
      }
    </script>
  </body>
</html>
